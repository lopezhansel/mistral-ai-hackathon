{
  "$schema": "https://json.schemastore.org/tsconfig.json",
  "compilerOptions": {
    "skipLibCheck": true,
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "baseUrl": ".",
    "paths": {
      "@repo/frontend": ["../frontend/src"],
      "@repo/trpc": ["../trpc/src"],
      "@repo/db": ["../db/src"],
      "@repo/chat": ["../chat/src"],
      "@repo/backend": ["../backend/src"]
    }
  }
}
