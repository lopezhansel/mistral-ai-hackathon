{
  "$schema": "https://biomejs.dev/schemas/1.6.4/schema.json",
  "files": {
    "include": [
      "*.cjs",
      "*.mjs",
      "*.js",
      "*.jsx",
      "*.mts",
      "*.ts",
      "*.tsx",
      "*.json"
    ],
    "ignore": ["dist", "node_modules"]
  },
  "organizeImports": {
    "enabled": true
  },
  "formatter": {
    "indentStyle": "space"
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true
    }
  }
}
